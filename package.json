{
  "name": "modulo-core",
  "version": "0.0.1",
  "description": "Modulo is a multimodal publishing interface",
  "repository": "https://github.com/robindemourat/modulo",
  "author": "Robin de Mourat",
  "license": "GPL-3.0+",
  "keywords": [
    "markdown",
    "publishing",
    "bibtex",
    "multimodal publishing"
  ],
  "main": "index.js",
  "scripts": {
    "start": "babel-node index.js",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src",
    "lint:fix": "eslint --config .eslintrc --fix src",
    "lint:watch": "node_modules/eslint-watch/bin/esw --watch --config .eslintrc src",
    "validate": "npm ls",
    "doc": "esdoc -c esdoc.json"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "commitizen": "^2.8.2",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "esdoc": "^0.4.7",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "0.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^0.8.0",
    "eslint-plugin-react": "^5.1.1",
    "eslint-watch": "^2.1.10",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.3",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "async": "^2.0.0-rc.1",
    "bibtex-parser": "0.0.0",
    "deep-diff": "^0.3.4",
    "fs": "0.0.2",
    "immutable": "^3.7.6",
    "marked": "^0.3.5",
    "prince": "^1.2.0",
    "radium": "^0.17.1",
    "raw-loader": "^0.5.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "redux": "^3.3.1",
    "rmdir": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
