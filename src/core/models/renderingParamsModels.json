{
  "notesPosition" : {
    "description" : "Where to put notes in the document ?",
    "valueType" : "string",
    "values" : [
      "footnotes",
      "sectionend",
      "documentend"
    ],
    "default" : "footnotes"
  },
  "citationStyle" : {
    "description" : "The style of bibliographic citations.",
    "valueType" : "string",
    "default": "iso690fr"
  },
  "referenceFilters" : {
    "description" : "How to filter citations for the bibliography ?",
    "valueType" : "string",
    "default": "has-title"
  },
  "referenceScope" : {
    "description": "At what hierarchical level to render bibliograph.y.ies ?",
    "valueType": "string",
    "default": "document",
    "values": ["section", "document"]
  },
  "referenceSortBy" : {
    "description": "How to order references ?",
    "valueType": "string",
    "default": "authors",
    "values" : [
      "title",
      "authors",
      "year",
      "type"
    ]
  },
  "tocPosition" : {
    "description": "Where to put the table of contents",
    "valueType": "string",
    "default": "begining",
    "values": ["begining", "end", "none"]
  },
  "figuresTablePosition" : {
    "description": "Where to put the table of figures",
    "valueType": "string",
    "default": "begining",
    "values": ["begining", "end", "none"]
  },
  "lexiconPosition" : {
    "description": "Where to put the bibliography",
    "valueType": "string",
    "default": "end",
    "values": ["begining", "end", "none"]
  }
}
