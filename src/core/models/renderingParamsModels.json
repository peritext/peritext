{
  "notesPosition" : {
    "description" : "Where to put notes in the document ?",
    "valueType" : "string",
    "values" : [
      "footnotes",
      "sectionend",
      "documentend"
    ],
    "default" : "footnotes"
  },
  "citationStyle" : {
    "description" : "The style of bibliographic citations.",
    "valueType" : "string",
    "default": "iso690fr"
  },
  "referenceFilters" : {
    "description" : "How to filter citations for the bibliography ?",
    "valueType" : "string"
  },
  "referencesPosition" : {
    "description": "Where to put the bibliograph.y.ies ?",
    "valueType": "string",
    "default": "end",
    "values": ["begining", "end"]
  },
  "referencesGeneralityLevel" : {
    "description": "At what hierarchical level to render bibliograph.y.ies ? (default 0)",
    "valueType": "number",
    "default": 0
  },
  "referencesOrder" : {
    "description": "How to order references ?",
    "valueType": "string",
    "default": "alphabetical",
    "values" : [
      "alphabetical",
      "year",
      "type"
    ]
  },
  "tocPosition" : {
    "description": "Where to put the table of contents",
    "valueType": "string",
    "default": "end",
    "values": ["begining", "end", "none"]
  },
  "figuresTablePosition" : {
    "description": "Where to put the table of figures",
    "valueType": "string",
    "default": "end",
    "values": ["begining", "end", "none"]
  },
  "lexiconPosition" : {
    "description": "Where to put the bibliography",
    "valueType": "string",
    "default": "end",
    "values": ["begining", "end", "none"]
  }
}
