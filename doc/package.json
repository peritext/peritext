{
  "name": "peritext",
  "version": "0.0.1",
  "description": "Peritext is a multimodal publishing interface",
  "repository": "https://github.com/robindemourat/peritext",
  "author": "Robin de Mourat",
  "license": "GPL-3.0+",
  "keywords": [
    "markdown",
    "publishing",
    "bibtex",
    "multimodal publishing"
  ],
  "main": "index.js",
  "scripts": {
    "start": "babel-node index.js",
    "test": "mocha --compilers js:babel-core/register --recursive",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src",
    "lint:fix": "eslint --config .eslintrc --fix src",
    "lint:watch": "node_modules/eslint-watch/bin/esw --watch --config .eslintrc src",
    "validate": "npm ls",
    "doc": "esdoc -c esdoc.json",
    "coverage": "nyc npm test && nyc check-coverage --lines 50 --functions 50 --branches 50",
    "autocommitadd": "git add doc src/_temp translations/locales",
    "manage:translations": "babel-node ./translationRunner.js"
  },
  "pre-commit": [
    "lint",
    "manage:translations",
    "coverage",
    "doc",
    "autocommitadd"
  ],
  "babel": {
    "presets": [
      "react",
      "es2015"
    ],
    "plugins": [
      "add-module-exports",
      "transform-class-properties",
      "transform-decorators-legacy",
      [
        "react-intl",
        {
          "messagesDir": "./translations/extractedMessages/",
          "enforceDescriptions": true
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "__coverage__",
          "istanbul"
        ]
      }
    }
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-intl": "^2.1.3",
    "babel-plugin-transform-class-properties": "^6.10.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "commitizen": "^2.8.2",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "esdoc": "^0.4.7",
    "esdoc-es7-plugin": "0.0.3",
    "eslint": "1.10.3",
    "eslint-config-airbnb": "0.1.0",
    "eslint-loader": "^1.0.0",
    "eslint-plugin-import": "^0.8.0",
    "eslint-plugin-react": "^5.1.1",
    "eslint-watch": "^2.1.10",
    "istanbul": "^0.4.4",
    "mocha": "^2.4.5",
    "nyc": "^7.0.0",
    "pre-commit": "^1.1.3",
    "precommit-hook": "^3.0.0",
    "react-addons-test-utils": "^15.1.0",
    "react-intl-translations-manager": "^3.1.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "async": "^2.0.0-rc.1",
    "bibtex-parser": "0.0.0",
    "deep-diff": "^0.3.4",
    "fs": "0.0.2",
    "html-entities": "^1.2.0",
    "html-to-react": "git+https://github.com/robindemourat/html-to-react.git",
    "html2json": "^1.0.2",
    "immutable": "^3.7.6",
    "json-loader": "^0.5.4",
    "markdown-to-react-components": "^0.2.1",
    "marked": "^0.3.5",
    "prince": "^1.2.0",
    "radium": "^0.17.1",
    "raw-loader": "^0.5.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-intl": "^2.1.3",
    "react-markdown": "^2.4.2",
    "react-string-replace": "^0.3.2",
    "react-string-replace-recursively": "^0.1.27",
    "rmdir": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "nyc": {
      "include": [
        "src/*.js"
      ],
      "require": [
        "babel-register"
      ],
      "sourceMap": false,
      "instrument": false
    }
  }
}
